container_commands:
  01-change_permision:
    command: "sudo chown -R www-data:www-data /var/app/current"
  02-copy_env:
    command: "sudo cp /var/app/.env /var/app/current/.env"
  03-change_inner_permission:
    command: "sudo chown -R www-data:www-data /var/app/current/*"
  04-change_storage_permission:
    command: "sudo chgrp -R www-data storage  /var/app/current/bootstrap/cache"
  05-change_storage_permission:
    command: "sudo chmod -R ug+rwx storage /var/app/current/bootstrap/cache"